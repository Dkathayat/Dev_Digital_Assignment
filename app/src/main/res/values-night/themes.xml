<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevDigitalAssignment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/night</item>
        <item name="colorPrimaryVariant">@color/night</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night</item>
        <item name="colorSecondaryVariant">@color/night</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/cardNight</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.DevDigitalAssignment.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main_color</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_rweather_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.DevDigitalAssignment.NoActionBar</item>
    </style>

    <style name="Theme.DevDigitalAssignment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DevDigitalAssignment.bg">
        <item name="android:background">@color/sunny</item>
    </style>

    <style name="Theme.DevDigitalAssignment.CustomCardview" parent="CardView">
        <item name="cardBackgroundColor">@color/cardSunny</item>
    </style>
</resources>